.pokemon-item(*ngFor="let pokemon of pokemonService.listPokemons$ | async", '(click)'="toggleModal(pokemon)")
  .pok_photo
    img(
      [defaultImage]="'data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAEALAAAAAABAAEAAAICTAEAOw=='",
      [lazyLoad]="pokemon.src", alt="Pokemon photo"
    )
  .pok_content
    .pok-content_name {{ pokemon.name }}
    .pok-content_number \#{{ pokemon.id }}
    ul.pok-content_list(*ngIf="pokemon.abilities")
      li.ability(*ngFor="let ability of pokemon.abilities") {{ ability.name }}
