.pokemon-item(*ngFor="let pokemon of listPokemons; let index = index", '(click)'="toggleModal(index)")
  .pok_photo
    img([src]="pokemonService.getPhotoUrl(index)", alt="Pokemon photo")
  .pok_content
    .pok-content_name {{ pokemon.name }}
    .pok-content_number \#{{ index+1 }}
    ul.pok-content_list(*ngIf='pokemon.abilities')
      li.ability(*ngFor="let ability of pokemon.abilities") {{ ability.name }}